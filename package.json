{
  "name": "git-blame-inline",
  "displayName": "Git Blame Inline",
  "description": "Lightweight inline Git blame annotations",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/milan-vala/vscode-inline-blame"
  },
  "publisher": "Milan Vala",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "blame",
    "annotations",
    "inline",
    "lightweight"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitBlameInline.toggle",
        "title": "Toggle Git Blame Annotations",
        "category": "Git Blame Inline"
      },
      {
        "command": "gitBlameInline.enable",
        "title": "Enable Git Blame Annotations",
        "category": "Git Blame Inline"
      },
      {
        "command": "gitBlameInline.disable",
        "title": "Disable Git Blame Annotations",
        "category": "Git Blame Inline"
      },
      {
        "command": "gitBlameInline.showCommitDetails",
        "title": "Show Commit Details",
        "category": "Git Blame Inline"
      }
    ],
    "keybindings": [
      {
        "command": "gitBlameInline.toggle",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceScheme == file",
          "command": "gitBlameInline.toggle",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "gitBlameInline.toggle"
        },
        {
          "command": "gitBlameInline.enable"
        },
        {
          "command": "gitBlameInline.disable"
        }
      ]
    },
    "configuration": {
      "title": "Git Blame Inline",
      "properties": {
        "gitBlameInline.showAuthor": {
          "type": "boolean",
          "default": true,
          "description": "Show author name in blame annotations"
        },
        "gitBlameInline.showDate": {
          "type": "boolean",
          "default": true,
          "description": "Show commit date in blame annotations"
        },
        "gitBlameInline.showCommit": {
          "type": "boolean",
          "default": false,
          "description": "Show short commit hash in blame annotations"
        },
        "gitBlameInline.maxAuthorLength": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum length for author names (truncated with ...)"
        },
        "gitBlameInline.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Git blame annotations by default"
        },
        "gitBlameInline.showOnlyCurrentLine": {
          "type": "boolean",
          "default": true,
          "description": "Show blame annotation only for the current cursor line"
        },
        "gitBlameInline.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show code lens above classes, interfaces, and functions"
        },
        "gitBlameInline.showCommitMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show commit message in blame annotations"
        },
        "gitBlameInline.maxCommitMessageLength": {
          "type": "number",
          "default": 50,
          "minimum": 20,
          "maximum": 100,
          "description": "Maximum length for commit messages (truncated with ...)"
        },
        "gitBlameInline.useGitHubAvatars": {
          "type": "boolean",
          "default": false,
          "description": "Use GitHub profile pictures (falls back to custom avatars if not found)"
        },
        "gitBlameInline.avatarStyle": {
          "type": "string",
          "enum": [
            "anime",
            "gaming",
            "minimal",
            "geometric"
          ],
          "default": "anime",
          "description": "Style of custom avatars when not using GitHub profiles"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
